<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button and title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2637B"
            android:padding="16dp">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuition Details"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Student Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tv_student_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textColor="#888888"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tv_student_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student ID Email"
                android:textColor="#888888"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_student_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tv_major_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Major"
                android:textColor="#888888"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tv_academic_year_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academic Year"
                android:textColor="#888888"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_academic_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

        </LinearLayout>

        <!-- Fee Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#F2637B"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <!-- Various Fees -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="8dp"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_tuition_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tuition Fee"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_tuition_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_accommodation_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Accommodation Fee"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_accommodation_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_book_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Book Fee"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_book_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_material_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Material Fee"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_material_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_activity_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Extracurricular Activity Fee"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_activity_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_exam_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Exam Fee"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_exam_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Payment Method -->


            <!-- Payment Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_payment_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Payment Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_payment_status_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Payment Status"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_payment_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#FF0000"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_total_fee_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total Tuition"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_total_fee_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Payment Time"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="end"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>