<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3E3E3">

    <!-- Unpaid Fees -->
    <LinearLayout
        android:id="@+id/unpaid_fees"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unpaid Fees"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="18dp" />
    </LinearLayout>

    <!-- Paid Fees -->
    <LinearLayout
        android:id="@+id/paid_fees"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid Fees"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="18dp" />
    </LinearLayout>

    <!-- Manage Payment Methods -->
    <LinearLayout
        android:id="@+id/manage_payment"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Payment Methods"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="18dp" />
    </LinearLayout>

    <!-- Personal Information -->
    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="18dp" />
    </LinearLayout>

    <!-- My Notifications -->
    <LinearLayout
        android:id="@+id/my_notifications"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Notifications"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="18dp" />
    </LinearLayout>

    <!-- Log Out -->
    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_marginBottom="200dp">

        <TextView
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="Log Out"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>