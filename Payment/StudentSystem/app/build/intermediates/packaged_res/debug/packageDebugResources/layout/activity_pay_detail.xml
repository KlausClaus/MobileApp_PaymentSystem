<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button and title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8BC34A"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Receipt"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Card for Student Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_student_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_academic_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Fee Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:paddingBottom="8dp"
            android:text="Fee Details"
            android:textColor="#3E4A89"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Card for Fee Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp"
            android:clipToPadding="false">

            <!-- Tuition Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_tuition_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tuition Fee"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_tuition_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Accommodation Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_accommodation_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Accommodation Fee"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_accommodation_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Book Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_book_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Book Fee"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_book_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Material Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_material_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Material Fee"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_material_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Extracurricular Activity Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_activity_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Extracurricular Activity Fee"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_activity_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Exam Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_exam_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Exam Fee"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_exam_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Payment Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_payment_status_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Payment Status"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_payment_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#FF0000"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Total Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_total_fee_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_total_fee_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Payment Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Payment Time"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
